<ul class="list-group">

<h1>Task details page</h1>
  <% if @task.completed %>
    <li><h3>[X] <%= @task.title %></h3></li>
  <% else %>
    <li><h3>[ ] <%= @task.title %></h3></li>
  <% end %>

<p><%= @task.details %></p>
</ul>


<%= link_to "Edit task", edit_path(params[:id])  %>
<%= link_to "Delete", task_path(params[:id]),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<%= link_to "Back to task list", tasks_path %>
